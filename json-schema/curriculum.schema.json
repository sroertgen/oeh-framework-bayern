{
    "$schema": "http://www.w3id.org/openeduhub/schema/curriculum-schema#",
    "$id": "http://www.w3id.org/openeduhub/schema/curriculum-schema#",
    "title": "Curriculum",
    "description": "A generic JSON schema for describing school curricula",
    "type": "object",
    "default": {
        "@context": {
            "id": "@id",
            "type": "@type",
            "@vocab": "http://schema.org/"
        }
    },
    "properties": {
        "id": {
            "title": "URL",
            "type": "string",
            "format": "uri"
        },
        "type": {
            "title": "Type of item",
            "type": "string",
            "description": "Must be of type \"Course\"",
            "enum": ["Course"]
        },
        "name": {
            "title": "Name if the item",
            "type": "string",
            "description": "Name of the Curriculum",
        },
        "description": {
            "title": "Description",
            "type": "string",
            "_display": {
                "rows": 5,
                "placeholder": "A short description of the resource"
            }
        },
        "creator": {
            "title": "Creator",
            "type": "array",
            "items": {
                "type": {
                    "title": "Type",
                    "type": "string",
                    "enum": [
                        "Person",
                        "Organization"
                    ]
                },
                "name": {
                    "title": "Name",
                    "type": "string",
                    "_display": {
                        "placeholder": "The creator's name"
                    }
                },
                "id": {
                    "title": "URL",
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": [
                "name",
                "type"
            ]
        },
        "courseCode": {
            "title": "Course Code",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "educationalLevel": {
            "title": "Educational level for the item",
            "type": "object",
            "_widget": {
                "type": "SkohubLookup",
                "options": {
                    "url": "http://vocabs.openeduhub.de/w3id.org/openeduhub/vocabs/educationalLevel/"
                }
            },
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "Concept"
                    ]
                },
                "id": {
                    "type": "string",
                    "format": "uri"
                },
                "inScheme": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string",
                            "enum": [
                                "http://vocabs.openeduhub.de/w3id.org/openeduhub/vocabs/educationalLevel/"
                            ]
                        }
                    }
                }
            }
        },
        "educationalContext": {
            "title": "Educational context (Bildungsstufe) for the item",
            "type": "object",
            "_widget": {
                "type": "SkohubLookup",
                "options": {
                    "url": "http://vocabs.openeduhub.de/w3id.org/openeduhub/vocabs/educationalContext/"
                }
            },
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "Concept"
                    ]
                },
                "id": {
                    "type": "string",
                    "format": "uri"
                },
                "inScheme": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string",
                            "enum": [
                                "http://vocabs.openeduhub.de/w3id.org/openeduhub/vocabs/educationalContext/"
                            ]
                        }
                    }
                }
            }
        },
        "hasPart": {
            "title": "Subelements of item",
            "type": "array",
            "items": {
                "type": {
                    "type": "string",
                    "enum": [
                        "Course"
                    ]
                },
                "id": {
                    "type": "string",
                    "format": "uri"
                },
                "name": {
                    "type": "string",
                    "title": "Name",
                    "description": "Name of subelement"

                }
            }
        },
        "license": {
            "title": "License",
            "type": "string",
            "format": "uri",
            "pattern": "^https:\/\/creativecommons.org\/(licenses|licences|publicdomain)\/.*",
            "_display": {
                "placeholder": "URL of the Creative Commons license"
            }
        },
    }
}
